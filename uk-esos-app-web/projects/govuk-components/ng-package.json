{
  "$schema": "../../node_modules/ng-packagr/ng-package.schema.json",
  "dest": "../../dist/govuk-components",
  "lib": {
    "entryFile": "src/public-api.ts"
  },
  "assets": [
    {
      "glob": "**/*",
      "input": "./src/assets",
      "output": "/assets/"
    },
    {
      "glob": "**/*",
      "input": "./src/styles",
      "output": "/styles/"
    }
  ]
}
