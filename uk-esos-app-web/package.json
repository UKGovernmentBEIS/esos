{
  "name": "uk-esos-main-web",
  "version": "0.81.0",
  "engines": {
    "node": "^18.20.4"
  },
  "scripts": {
    "postinstall": "node git-version.js && yarn prebuild",
    "ng": "ng",
    "start": "ng serve",
    "start:govuk-components": "ng build govuk-components --watch --configuration development",
    "test:govuk-components": "jest --config ./projects/govuk-components/jest.config.js",
    "test:govuk-components:watch": "jest --watch --config ./projects/govuk-components/jest.config.js",
    "test:govuk-components:coverage": "jest --coverage --config ./projects/govuk-components/jest.config.js",
    "test:frontend": "jest --config ./src/jest.config.js --silent --logHeapUsage --workerIdleMemoryLimit=1GB",
    "test:frontend:watch": "jest --watch --config ./src/jest.config.js",
    "test:frontend:coverage": "jest --coverage --config ./src/jest.config.js",
    "test:app:coverage": "yarn prebuild && yarn run test:frontend:coverage",
    "test:app:watch": "yarn build:govuk-components && yarn run test:frontend:watch",
    "build:govuk-components": "ng build govuk-components",
    "build:esos-api": "ng build esos-api",
    "prebuild": "yarn build:govuk-components && yarn build:esos-api",
    "build": "ng build",
    "prebuild:production": "yarn build:govuk-components && yarn build:esos-api",
    "build:production": "ng build",
    "generate:barrels:api": "barrelsby -d projects/esos-api/src/lib/ -l all -D",
    "pregenerate:api": "openapi-generator-cli generate -i projects/esos-api/src/assets/swagger.yaml -o projects/esos-api/src/lib/ -g typescript-angular -c projects/esos-api/openapi-config.yaml --global-property supportingFiles=.openapi-generator-ignore",
    "generate:api": "openapi-generator-cli generate -i projects/esos-api/src/assets/swagger.yaml -o projects/esos-api/src/lib/ -g typescript-angular -c projects/esos-api/openapi-config.yaml --global-property skipFormModel=false",
    "postgenerate:api": "yarn generate:barrels:api && rimraf projects/esos-api/src/lib/.openapi-generator && ng lint --fix && pretty-quick",
    "analyze": "ng build --source-map --named-chunks && source-map-explorer dist/uk-esos-main-web/*.*.js",
    "lint": "ng lint",
    "release:patch": "yarn version --patch --no-commit-hooks --no-git-tag-version && conventional-changelog -p angular -i CHANGELOG.md -s",
    "release:minor": "yarn version --minor --no-commit-hooks --no-git-tag-version && conventional-changelog -p angular -i CHANGELOG.md -s",
    "release:major": "yarn version --major --no-commit-hooks --no-git-tag-version && conventional-changelog -p angular -i CHANGELOG.md -s",
    "prepare": "husky install",
    "sonar": "sonar-scanner",
    "sonar:local": "sonar-scanner -Dsonar.host.url=http://localhost:9000 -Dsonar.login=admin -Dsonar.password=admin"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^18.2.13",
    "@angular/common": "^18.2.13",
    "@angular/compiler": "^18.2.13",
    "@angular/core": "^18.2.13",
    "@angular/forms": "^18.2.13",
    "@angular/platform-browser": "^18.2.13",
    "@angular/platform-browser-dynamic": "^18.2.13",
    "@angular/router": "^18.2.13",
    "@ministryofjustice/frontend": "^0.2.4",
    "@zxcvbn-ts/core": "^3.0.2",
    "@zxcvbn-ts/language-en": "^3.0.2",
    "angular-password-strength-meter": "^12.0.0",
    "bignumber.js": "9.1.1",
    "clean-deep": "^3.3.0",
    "crypto-js": "^4.2.0",
    "date-fns": "^2.30.0",
    "dialog-polyfill": "^0.5.6",
    "google-libphonenumber": "^3.2.10",
    "immer": "^9.0.19",
    "keycloak-angular": "16.1.0",
    "keycloak-js": "26.1.0",
    "lodash-es": "^4.17.15",
    "papaparse": "^5.4.1",
    "rxjs": "~7.8.1",
    "sonar-scanner": "^3.1.0",
    "tslib": "^2.4.0",
    "xlsx": "^0.18.5",
    "zone.js": "0.14.10"
  },
  "devDependencies": {
    "@angular-builders/jest": "^18.0.0",
    "@angular-devkit/build-angular": "^18.2.13",
    "@angular-devkit/core": "^18.2.13",
    "@angular-devkit/schematics": "^18.2.13",
    "@angular-eslint/builder": "^18.3.1",
    "@angular-eslint/eslint-plugin": "^18.3.1",
    "@angular-eslint/eslint-plugin-template": "^18.3.1",
    "@angular-eslint/schematics": "^18.3.1",
    "@angular-eslint/template-parser": "^18.3.1",
    "@angular/cli": "^18.2.13",
    "@angular/compiler-cli": "^18.2.13",
    "@angular/language-service": "^18.2.13",
    "@babel/core": "^7.25.8",
    "@openapitools/openapi-generator-cli": "^2.5.2",
    "@testing-library/angular": "^17.3.1",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.5.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/crypto-js": "^4.0.0",
    "@types/google-libphonenumber": "^7.4.18",
    "@types/gtag.js": "^0.0.12",
    "@types/jest": "^29.5.12",
    "@types/lodash-es": "^4.17.3",
    "@types/node": "18.19.50",
    "@types/papaparse": "^5.3.14",
    "@types/testing-library__jest-dom": "^5.14.5",
    "@typescript-eslint/eslint-plugin": "^5.57.1",
    "@typescript-eslint/parser": "^5.57.1",
    "@typescript-eslint/utils": "^8.8.1",
    "babel-jest": "29.7.0",
    "babel-loader": "8.2.3",
    "barrelsby": "^2.2.0",
    "commit-message-validator": "^1.0.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-jsdoc": "^40.1.1",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "eslint-plugin-unused-imports": "^2.0.0",
    "fs-extra": "^10.0.0",
    "git-branch": "^2.0.1",
    "git-describe": "^4.1.0",
    "husky": "^7.0.0",
    "jest": "^29.7.0",
    "jest-html-reporter": "^3.8.0",
    "jest-preset-angular": "^14.0.0",
    "ng-packagr": "^18.2.1",
    "prettier": "3.3.3",
    "pretty-quick": "4.0.0",
    "rimraf": "^4.4.1",
    "source-map-explorer": "^2.5.3",
    "ts-jest": "^29.1.1",
    "ts-node": "10.4.0",
    "typescript": "~5.4.5"
  },
  "config": {
    "commit-message-validator": {
      "pattern": "^\\[ESOS-[0-9]+\\]\\s.{5}",
      "errorMessage": "Commit message must follow the format: feat(ui): ESOS-123 - the message goes here"
    }
  }
}
