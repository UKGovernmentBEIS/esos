<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
        logicalFilePath="v0.1.0/changelog_action_plan.xml"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.11.xsd">

    <changeSet id="0_1_0_CREATE_ACTION_PLAN_TABLE" author="pmpountas@unisystems.gr">
        <comment>Create NOC table</comment>
        <createTable tableName="action_plan" remarks="Represents an action plan">
            <column name="id" type="varchar(20)" remarks="Primary key">
                <constraints primaryKey="true" primaryKeyName="ap_pk" nullable="false"/>
            </column>
            <column name="data" type="jsonb" remarks="The ap data">
                <constraints nullable="false" />
            </column>
            <column name="account_id" type="bigint" remarks="The account id related with noc">
                <constraints nullable="false" />
            </column>
            <column name="phase" type="varchar(255)" remarks="The ap phase">
                <constraints nullable="false" />
            </column>
        </createTable>
        <rollback>
            <sql>
                DROP TABLE IF EXISTS action_plan CASCADE;
            </sql>
        </rollback>
    </changeSet>

</databaseChangeLog>
