<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">
    <changeSet id="0_1_0_create_user_details" author="P35066">
        <validCheckSum>1:any</validCheckSum>
        <createTable tableName="user_details">
            <column name="user_id" type="varchar(36)">
                <constraints nullable="false"/>
            </column>
            <column name="signature_uuid" type="varchar(255)" remarks="The signature uuid">
                <constraints nullable="false" />
            </column>
            <column name="signature_content" type="bytea">
                <constraints nullable="false" />
            </column>
            <column name="signature_name" type="varchar(255)" remarks="The signature name">
                <constraints nullable="false" />
            </column>
            <column name="signature_size" type="bigint" remarks="The size of the signature in bytes">
                <constraints nullable="false" />
            </column>
            <column name="signature_type" type="varchar(255)" remarks="The mime type of the signature">
                <constraints nullable="false" />
            </column>
        </createTable>

        <addPrimaryKey
            constraintName="pk_user_details"
            tableName="user_details"
            columnNames="user_id"/>
        
        <addForeignKeyConstraint 
        	constraintName="fk_user_details_user_entity" 
        	baseTableName="user_details" 
        	baseColumnNames="user_id" 
        	referencedTableName="user_entity" 
        	referencedColumnNames="id"/>
    </changeSet>
    
    
    <changeSet id="update_enabled_property_to_true_for_users_with_autority_deleted" author="P35066">
    	<sql>
            UPDATE user_entity ue
			SET enabled = true
			WHERE ue.id IN (
			    SELECT ua.user_id
			    FROM user_attribute ua
			    JOIN credential uc ON uc.user_id = ua.user_id
			    WHERE ua.name = 'status'
			    AND ua.value = 'DELETED'
			);
        </sql>
        <rollback />
    </changeSet>
    
    <changeSet id="update_replace_status_attribute_for_users_with_status_DELETED" author="P35066">
    	<sql>
            UPDATE user_attribute ua
			SET value = CASE
			              WHEN ue.enabled = true AND uc.user_id IS NOT NULL THEN 'REGISTERED'
			              ELSE 'PENDING'
			           END
			FROM user_entity ue
			LEFT JOIN (
			    SELECT DISTINCT user_id
			    FROM credential
			) uc ON uc.user_id = ue.id
			WHERE ua.name = 'status'
			  AND ua.value = 'DELETED'
			  AND ua.user_id = ue.id;
        </sql>
        <rollback />
    </changeSet>
    
</databaseChangeLog>
